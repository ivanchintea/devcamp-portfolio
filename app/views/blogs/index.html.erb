<p style="color: green"><%= notice %></p>

<h1>Blogs</h1>
<table>
  <thead>
    <tr>
     <th>Blog Title</th>
     <th>Body</th>
     <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.body %></td>
        <td><%= link_to blog.status, toggle_status_blog_path(blog) %></td>
        <td><%= link_to "Show", blog %></td>
        <td><%= link_to "Edit", edit_portfolio_path(blog) %></td>
        <td><%= link_to "Delete", blog, data: { "turbo-method": :delete } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New blog", new_blog_path %>
